<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.scuvanov.sofit.fragment.CommentFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvComment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:clickable="true"/>
    </LinearLayout>

    <Button
            android:layout_width="55dp"
            android:elevation="4dp"
            android:background="@drawable/add_content_selector"
            android:layout_margin="25dp"
            android:layout_height="55dp"
            android:id="@+id/buttonAdd" android:layout_gravity="right|bottom"/>

    <Button
            android:layout_width="55dp"
            android:isScrollContainer="false"
            android:layout_height="55dp"
            android:layout_margin="25dp"
            android:background="@drawable/back_selector"
            android:id="@+id/buttonBack" android:layout_gravity="left|bottom"/>
</FrameLayout>
