<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.scuvanov.sofit"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scuvanov.sofit.fragment.CalendarFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <com.squareup.timessquare.CalendarPickerView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:dayBackground="@drawable/custom_calendar_bg_selector" />

    </LinearLayout>

    <com.scuvanov.sofit.font.RobotoTextView
        android:id="@+id/textViewTutorialCalendar"
        style="@style/TextViewAppearance.Title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:drawableTop="@drawable/ic_content_upward"
        android:ellipsize="none"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:text="Press any date to add a workout!"
        android:textColor="@color/secondary_blue"
        android:textSize="15sp"
        app:typeface="robotoBold" />


    <Button
        android:id="@+id/buttonAddDate"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="right|bottom"
        android:layout_margin="25dp"
        android:background="@drawable/add_content_selector"
        android:isScrollContainer="false" />
</FrameLayout>
